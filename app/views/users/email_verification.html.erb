<section>
    <%= image_tag "oval.svg", size: "200" %>
    <%= turbo_frame_tag "registration" do %>
        <h1>Verify your email</h1>
        <p>A one-time code was sent to your email</p>
        <%= form_with url: "/users/verify_email", method: :post do |form| %>
            <div>
                <%= form.text_field :code, placeholder: "One-time code" %>
            </div>
			<%= form.hidden_field :skip_passkey, value: params[:skip_passkey] %>
            <%= form.submit "Verify" %>
        <% end %>
        <%= link_to "Resend Code" %>
    <% end %>
    <div>
        <p>Having trouble? <a href="mailto:support@obl.ong">support@obl.ong</a></p>
        <p><a href="https://obl.ong">What's Obl.ong?</a></p>
    </div>
</section>

