<section>
	<%= image_tag "oval.svg", size: "200" %>
	<%= turbo_frame_tag "registration" do %>
		<h1>Register to continue to <br><b>Obl.ong</b></h1>
		<p>Already have an account? <a href="/auth/login">Login</a></p>
		<%= form_with url: "/users/create", method: :post do |form| %>
			<div>
				<%= form.label :name, "Full name" %>
				<%= form.text_field :name %>
			</div>
			<div>
				<%= form.label :email, "Email" %>
				<%= form.email_field :email %>
			</div>
			<%= form.submit "Register!" %>
		<% end %>
	<% end %>

	<div id="error"></div>
	
	<div>
		<p>Having trouble? <a href="mailto:support@obl.ong">support@obl.ong</a></p>
		<p><a href="https://obl.ong">What's Obl.ong?</a></p>
	</div>
</section>

<style>
	main {
		padding: 5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		min-height: 100vh;
	}

	.error {
		font-style: italic;
		color: var(--lemon-glacier);
	}

	h1 {
		font-weight: 300;
		font-size: 2.5rem;
		padding: 0;
		margin: 0;
	}

	div {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	a {
		color: var(--winter-sky);
	}

	a:hover {
		font-style: italic;
	}
	
	b {
		font-weight: 700; 
	}
	
	form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	input[type=submit] {
		align-self: center;
	}

	section, turbo-frame {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		align-items: center;
		text-align: center;
	}

	label {
		text-align: left;
	}
</style>